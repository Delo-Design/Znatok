<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field name="search" type="text" hint="JSEARCH_FILTER"/>
	</fields>
	<fields name="list">
		<field name="fullordering" type="list"
			   onchange="this.form.submit();"
			   default="u.modified ASC">
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="u.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="u.id DESC">JGRID_HEADING_ID_DESC</option>
			<option value="u.created ASC">COM_ZNATOK_DATE_CREATED_ASC</option>
			<option value="u.created DESC">COM_ZNATOK_DATE_CREATED_DESC</option>
			<option value="u.modified ASC">COM_ZNATOK_DATE_MODIFIED_ASC</option>
			<option value="u.modified DESC">COM_ZNATOK_DATE_MODIFIED_DESC</option>
			<option value="u.url ASC">COM_ZNATOK_URL_ASC</option>
			<option value="u.url DESC">COM_ZNATOK_URL_DESC</option>
		</field>
		<field name="limit" type="limitbox"
			   class="inputbox input-mini"
			   default="25"
			   onchange="this.form.submit();"/>
	</fields>
</form>